<?xml version="1.0"?>
<s:ItemRenderer
    xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    autoDrawBackground="false" width="100%" height="19" cachePolicy="on">

    <s:states>
        <s:State name="normal"/>
        <s:State name="selected"/>
    </s:states>

    <s:Rect left="0" right="1" bottom="0" top="0" includeIn="selected">
        <s:fill>
            <s:SolidColor color="0xffffff" alpha="0.1"/>
        </s:fill>
    </s:Rect>

    <s:Group left="5" right="6" bottom="0" top="1" id="labelGroup">
        <mx:Label
            text="{data}" verticalCenter="0" color="white" fontFamily="consolas"
            fontSize="13" minWidth="10"/>
    </s:Group>
</s:ItemRenderer>
