<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin
    xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    minWidth="15" minHeight="10"
    alpha.disabled="0.5" alpha.inactive="0.5">

    <fx:Metadata>
        [HostComponent("spark.components.VScrollBar")]
    </fx:Metadata>

    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
        <s:State name="inactive"/>
    </s:states>


    <s:Button
        id="track" top="2" bottom="2" height="54"
        focusEnabled="false" tabEnabled="false"
        skinClass="ru.koldoon.resources.skins.scroller.ScrollBarLightTrackSkin"/>

    <s:Button
        id="thumb" buttonMode="true"
        focusEnabled="false" visible.inactive="false" tabEnabled="false"
        skinClass="ru.koldoon.resources.skins.scroller.VScrollBarLightThumbSkin"/>
</s:SparkSkin>
